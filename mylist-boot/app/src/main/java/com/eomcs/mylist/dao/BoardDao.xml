<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- 
  namespace => 인터페이스의 패키지 및 이름과 일치해야 한다.
 -->
<mapper namespace="com.eomcs.mylist.dao.BoardDao">

<!-- 
  id => 인터페이스의 메서드 이름과 일치해야 한다.
 -->
  <select id="findAll" resultType="Board">
    select
      board_no as no,
      title,
      created_date as createdDate,
      view_count as viewCount
    from
      ml_board
    order by
      board_no desc
  </select>
  
<!-- 
  parameterType => 메서드의 파라미터 타입 및 개수와 일치해야 한다.
 -->
  <select id="findByNo" resultType="Board" parameterType="int">
    select
      board_no no,
      title,
      content,
      created_date createdDate,
      view_count viewCount
    from
      ml_board
    where 
      board_no=#{no}
  </select>
  
  <insert id="insert" parameterType="Board">
    insert into ml_board(title,content)
    values(#{title},#{content})
  </insert>
  
  <update id="update" parameterType="Board">
    update ml_board set 
      title=#{title},
      content=#{content}
    where
      board_no=#{no}
  </update>
  
  <select id="countAll" resultType="int">
    select count(*)
    from ml_board
  </select>
  
  <delete id="delete" parameterType="int">
    delete from ml_board
    where board_no=#{no}
  </delete>
  
  <update id="updateViewCount" parameterType="int">
    update ml_board set
      view_count=view_count + 1
    where
      board_no=#{no}
  </update>
  
</mapper>